<div id="login" class="container">
  <div class="row no-gutters">
    <div class="col-md-6 d-flex align-items-center">
      <div class="form w-100">
        <%= link_to "Volver al inicio", root_path, class: "btn btn-link mb-3 p-0 fw-bolder" %>
        <div class="">
          <h2 class="mb-4 fw-bold">Bienvenidos a <br> TicketX</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <div class="form-group">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control", placeholder: "Correo electrónico" },
                          label: false %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control mt-2", placeholder: "Contraseña" },
                          label: false %>
            </div>
            <div class="form-group form-check p-0">
              <%= f.input :remember_me, as: :boolean, label: "Recordarme", input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "Ingresar", class: "btn btn-primary btn-block w-100 mb-3" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <div class="col-md-6 p-0">
      <div class="image-background">
      </div>
    </div>
  </div>
</div>
