<div class="container">
  <h1>Events#new</h1>
  <p>Find me in app/views/events/new.html.erb</p>

  <%= simple_form_for(@event) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :date %>
    <%= f.input :location %>
    <%= f.input :quantity %>
    <%= f.input :ticket_price %>
    <%= f.input :photo, as: :file %>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
      <%= link_to 'Volver a ver eventos', events_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
