<div class="container mt-5">
  <h1 class='fw-bold'>Mis eventos</h1>
  <div class="row my-5">
    <% @my_events.each do |event| %>
      <div class="col-3 d-flex align-items-stretch mb-3">
        <div class="card card-event shadow h-100">
          <% if event.photo.attached? %>
            <%= cl_image_tag event.photo.key, height: 300, width: 450, crop: :fill, class: 'img-fluid' %>
          <% else %>
            <%= image_tag "sinimagen.jpg", height: 300, width: 450, crop: :fill, class: 'img-fluid' %>
          <% end %>
          <div class="card-body d-flex flex-column">
            <p class="title fw-bolder mb-4"><%= event.name %></p>
            <p class='mb-4'><i class="fa-regular fa-calendar me-2"></i><%= event.date %> - 6:00 pm</p>
            <div class='mt-auto d-flex justify-content-between align-items-center'>
              <p>Desde <span class="fw-bolder">S/ <%= event.ticket_price %></span></p>
            </div>
            <div class="row justify-content-center mt-3">
              <%= link_to "Editar", edit_event_path(event), class: "btn btn-primary btn-sm col-5 me-2"%>
              <%= link_to "Eliminar", event_path(event), data: { turbo_method: :delete, turbo_confirm: "Â¿EstÃ¡s seguro de que quieres eliminar este evento?"}, class: "btn btn-outline btn-sm col-5"%>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
